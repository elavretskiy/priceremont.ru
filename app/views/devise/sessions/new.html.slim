= simple_form_for resource, as: resource_name,
                  url: session_path(resource_name),
                  html: { class: 'validate-form' } do |f|
  h4.text-center Авторизация
  .form-group
    = f.input :email,
              label: 'E-mail',
              required: true,
              autofocus: true,
              input_html: { class: 'form-control' }
  .form-group
    = f.input :password,
              label: 'Пароль',
              required: true,
              input_html: { class: 'form-control' }
  .form-group
    = f.input :remember_me,
              label: 'Запомнить меня',
              as: :boolean
  .form-group
    = f.button :submit, 'Войти', class: 'btn btn-default'
  = render 'devise/shared/links'
